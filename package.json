    "@fastify/autoload": "^6.0.2",
    "@fastify/env": "^5.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@sinclair/typebox": "^0.34.11",
    "close-with-grace": "^2.1.0",
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.40.0",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "fastify-print-routes": "^4.0.0",
    "node-postgres": "^0.6.2",
    "pg": "^8.13.1",
    "pino-pretty": "^13.0.0",
    "undici": "^7.0.0"
  }
