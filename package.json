{
  "name": "fasity-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist/ && tsc --build",
    "build:test": "rm -rf dist && tsc --project tsconfig.test.json",
    "watch": "tsc -w",
    "dev": "nodemon | pino-pretty --colorize",
    "start": "node --env-file=.env dist/server.js",
    "db:apply:changes": "npx drizzle-kit push",
    "db:seed": "node scripts/seed.js",
    "db:migrate": "node scripts/migration.js",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "npm run build:test && npm run test:unit",
    "test:unit": "NODE_ENV=test c8 tsx --test"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@faker-js/faker": "^9.2.0",
    "@types/node": "^22.9.0",
    "@types/pg": "^8.11.10",
    "c8": "^10.1.3",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.17.0",
    "globals": "^16.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.18.1"
  },
  "dependencies": {
    "@dancastillo/cache": "^1.1.1",
    "@dancastillo/error": "^0.0.5",
