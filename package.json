{
  "name": "fasity-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist/ && tsc --build",
    "build:test": "rm -rf dist && tsc --project tsconfig.test.json",
    "watch": "tsc -w",
    "dev": "nodemon | pino-pretty --colorize",
    "start": "node --env-file=.env dist/server.js",
    "db:apply:changes": "npx drizzle-kit push",
    "db:seed": "node --experimental-strip-types scripts/seed.ts",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "test": "npm run build:test && npm run test:unit",
    "test:unit": "NODE_ENV=test borp --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@types/node": "^22.9.0",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^8.15.0",
    "borp": "^0.18.0",
    "drizzle-kit": "^0.28.0",
    "eslint": "^8.57.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@fastify/autoload": "^6.0.2",
    "@fastify/env": "^5.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "close-with-grace": "^2.1.0",
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.1",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "fastify-print-routes": "^4.0.0",
    "node-postgres": "^0.6.2",
    "pg": "^8.13.1",
    "pino-pretty": "^13.0.0",
    "undici": "^6.21.0"
  }
}
